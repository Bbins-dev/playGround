{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "globals": {
    "GameConfig": "readonly",
    "I18nHelper": "readonly",
    "Player": "readonly",
    "Enemy": "readonly",
    "Card": "readonly",
    "BattleSystem": "readonly",
    "GameManager": "readonly",
    "EffectSystem": "readonly",
    "HPBarSystem": "readonly",
    "AudioSystem": "readonly",
    "UIManager": "readonly",
    "CardRenderer": "readonly",
    "DOMCardRenderer": "readonly",
    "DescriptionParser": "readonly",
    "CanvasUtils": "readonly",
    "TimerManager": "readonly"
  }
}
